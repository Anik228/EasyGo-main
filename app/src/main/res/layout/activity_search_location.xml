<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_horizontal"
    >

    <RelativeLayout android:id="@+id/node_info"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >



        <View   android:id="@+id/rectangle1"
            android:background="@drawable/rectangle_1223_shape"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <RelativeLayout android:id="@+id/sourceNode"
            android:layout_marginTop="80dp"
            android:layout_marginStart="68dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <View   android:id="@+id/rectangle2"
                android:background="@drawable/rectangle_1222_shape"
                android:layout_marginStart="1dp"
                android:layout_marginTop="0dp"
                android:layout_width="200dp"
                android:layout_height="26dp" />



            <View   android:id="@+id/rectangle4"
                android:background="@drawable/rectangle_1224_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="74dp"
                android:layout_width="200dp"
                android:layout_height="26dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="90dp"
                android:layout_marginLeft="200dp"
                android:src="@drawable/ic_route"/>

            <EditText android:id="@+id/sourceNodeName1"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-4dp"
                android:textSize="12dp"
                android:layout_width="180dp"
                android:background="#00000000"
                android:layout_height="35dp"
                android:hint="From"
                />



            <EditText android:id="@+id/sourceNodeName2"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:layout_marginTop="70dp"
                android:layout_width="180dp"
                android:background="#00000000"
                android:layout_height="35dp"
                android:hint="To"
                />

        </RelativeLayout>




        <RelativeLayout android:id="@+id/adjacentField"
            android:layout_marginTop="200dp"

            android:layout_marginLeft="90dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >



            <View   android:id="@+id/rectangle_1226"
                android:background="@drawable/rectangle_1226_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="96dp"
                android:layout_height="30dp" />

            <TextView android:id="@+id/saveBtn"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textColor="@color/rectangle_1223_color"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="1dp"
                android:layout_width="88.22dp"
                android:layout_height="25dp"
                android:text="search"
                android:textAlignment="center"
                android:textSize="20dp"
                />







        </RelativeLayout>


        <TextView
            android:id="@+id/node_info_text"
            android:layout_width="252dp"
            android:layout_height="34dp"

            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Search Room"
            android:textColor="@color/node_info_text_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout android:id="@+id/saveBtnField"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="100dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/select_text"

                android:layout_width="252dp"
                android:layout_height="34dp"

                android:layout_marginLeft="1dp"
                android:layout_marginTop="20dp"

                android:text="Select where you want to go"
                android:textColor="@color/node_info_text_color"
                android:textSize="15sp" />

            <View
                android:background="@drawable/rectangle_1226_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="100dp"
                android:layout_width="200dp"

                android:layout_height="26dp" />

            <TextView android:id="@+id/button1"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textColor="@color/rectangle_1223_color"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="100dp"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:text="Room 64"
                android:textAlignment="center"
                android:textSize="16dp"
                />


            <View
                android:background="@drawable/rectangle_1226_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="140dp"
                android:layout_width="200dp"

                android:layout_height="26dp" />

            <TextView android:id="@+id/button2"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textColor="@color/rectangle_1223_color"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="140dp"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:text="Room 65"
                android:textAlignment="center"
                android:textSize="16dp"
                />


            <View
                android:background="@drawable/rectangle_1226_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="180dp"
                android:layout_width="200dp"

                android:layout_height="26dp" />

            <TextView android:id="@+id/button3"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textColor="@color/rectangle_1223_color"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="180dp"
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:text="Room 66"
                android:textAlignment="center"
                android:textSize="16dp"
                />




        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>