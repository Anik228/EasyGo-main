<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/design"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="340dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="428dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rec"
                tools:ignore="MissingConstraints"
                />

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                />

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView4"
                android:layout_width="359dp"
                android:layout_height="match_parent"
                android:src="@drawable/lgo1"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="62dp" />
        </RelativeLayout>



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/design">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your email"
                android:layout_marginBottom="20dp"
                android:textColor="#1069E3"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                />
            <EditText
                android:layout_centerHorizontal="true"
                android:id="@+id/edt_email"
                android:layout_below="@+id/textView3"
                android:layout_width="314dp"
                android:layout_height="67dp"
                android:layout_weight="10"
                android:background="@drawable/shape_border_and_background_login"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:hint="easygo@domain.com"
                android:textSize="17dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="524dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_centerHorizontal="true"
                android:id="@+id/enter"
                android:layout_below="@+id/edt_email"
                android:layout_width="319dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_btn"
                android:text="Enter   >"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="46dp"
                tools:layout_editor_absoluteY="610dp" />
        </RelativeLayout>

    </RelativeLayout>











</androidx.constraintlayout.widget.ConstraintLayout>