<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"

   android:gravity="center_horizontal"
>
            <RelativeLayout android:id="@+id/node_info"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View   android:id="@+id/rectangle1"
                    android:background="@drawable/rectangle_1223_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RelativeLayout android:id="@+id/sourceNode"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="68dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View   android:id="@+id/rectangle2"
                        android:background="@drawable/rectangle_1222_shape"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="200dp"
                        android:layout_height="26dp" />

                    <View   android:id="@+id/rectangle3"
                        android:background="@drawable/rectangle_1223_ek1_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="37dp"
                        android:layout_width="200dp"
                        android:layout_height="26dp" />

                    <View   android:id="@+id/rectangle4"
                        android:background="@drawable/rectangle_1224_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="74dp"
                        android:layout_width="200dp"
                        android:layout_height="26dp" />


                    <TextView android:id="@+id/sourceNodeName"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="33dp"
                        android:textSize="12dp"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:background="#00000000"
                        android:hint="Node Name"
                        />

                    <TextView android:id="@+id/sourceNodeInfo"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:layout_marginTop="70dp"
                        android:layout_width="180dp"
                        android:background="#00000000"
                        android:layout_height="35dp"
                        android:hint="Info"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="190dp"
                    android:layout_marginStart="68dp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_route"/>
                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="Distance: 1.5m"/>
                </LinearLayout>


                <RelativeLayout android:id="@+id/adjacentField"
                    android:layout_marginTop="290dp"
                    android:layout_marginStart="68dp"
                    android:layout_centerHorizontal="true"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View   android:id="@+id/rectangle_1222_ek1"
                        android:background="@drawable/rectangle_1222_ek1_shape"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="200dp"
                        android:layout_height="26dp" />

                    <View   android:id="@+id/rectangle_1223_ek2"
                        android:background="@drawable/rectangle_1223_ek2_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="37dp"
                        android:layout_width="200dp"
                        android:layout_height="26dp" />

                    <View   android:id="@+id/rectangle_1224_ek1"
                        android:background="@drawable/rectangle_1224_ek1_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="74dp"
                        android:layout_width="200dp"
                        android:layout_height="26dp" />



                    <EditText android:id="@+id/adjacentNodeName"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="33dp"
                        android:textSize="12dp"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:background="#00000000"
                        android:hint="Node Name"
                        />

                    <EditText android:id="@+id/adjacentNodeInfo"
                        android:textColor="@color/text_color"
                        android:layout_marginLeft="10dp"
                        android:textSize="12dp"
                        android:layout_marginTop="70dp"
                        android:layout_width="180dp"
                        android:background="#00000000"
                        android:layout_height="35dp"
                        android:hint="Info"
                        />

                </RelativeLayout>


                <TextView
                    android:id="@+id/node_info_text"
                    android:layout_width="252dp"
                    android:layout_height="34dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="@string/node_info_text_string"
                    android:textColor="@color/node_info_text_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout android:id="@+id/saveBtnField"
                    android:layout_marginTop="400dp"
                    android:layout_marginStart="121dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View   android:id="@+id/rectangle_1226"
                        android:background="@drawable/rectangle_1226_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="96dp"
                        android:layout_height="30dp" />

                    <Button android:id="@+id/saveBtn"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textColor="@color/rectangle_1223_color"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="88.22dp"
                        android:layout_height="25dp"
                        android:text="@string/text_ek6_string"
                        />

                </RelativeLayout>

            </RelativeLayout>

</LinearLayout>